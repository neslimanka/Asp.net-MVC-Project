
@model TabimApplication.Models.Model.User

@{
    ViewBag.Title = "Login";
    Layout = null;
}



<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="~/Content/AdminLayout/img/favicon.png">

    <title>Login</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/AdminLayout/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Content/AdminLayout/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Content/AdminLayout/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/AdminLayout/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Content/AdminLayout/css/style.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/css/style-responsive.css" rel="stylesheet" />


</head>

<body class="login-img2-body">

    <div class="container">

        <form class="login-form" method="post" action="/Home/Login/">
            <div class="login-wrap">

                @if (Session["UserId"] == null)
                {
                    <p class="alert ">@ViewBag.Uyari</p>
                }
                <p class="login-img"><i class="icon_lock_alt"></i></p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_profile"></i></span>
                    <input type="text" class="form-control" name="Email" placeholder="Eposta" autofocus>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                    <input type="password" class="form-control" name="Password" placeholder="Şifre">
                </div>

                <button class="btn btn-primary btn-lg btn-block" type="submit"> Giris Yap </button>
                @Html.ActionLink("Kayıt Ol", "Signup", "Home", null, new { @class = "btn btn-info btn-lg btn-block" })

            </div>
        </form>

    </div>


</body>

</html>